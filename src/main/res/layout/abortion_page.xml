<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout android:orientation="vertical" android:isScrollContainer="true" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.constraintlayout.widget.ConstraintLayout android:layout_height="wrap_content" android:layout_width="match_parent">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent" android:textStyle="bold" android:textSize="48sp" android:textColor="#E83546" android:textAlignment="center" android:text="Abortion Acts" android:fontFamily="sans-serif-condensed-light" android:layout_marginTop="4dp" android:id="@+id/titleparenting"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:textColor="#4D7CF1" android:textAlignment="center" android:text="(Chapter 390)" android:id="@+id/chapter" app:layout_constraintTop_toBottomOf="@+id/titleparenting"/>

</androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView android:layout_height="match_parent" android:layout_width="405dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/titleparenting" app:layout_constraintVertical_bias="1.0" app:layout_constraintBottom_toBottomOf="parent">


    <androidx.constraintlayout.widget.ConstraintLayout android:layout_height="wrap_content" android:layout_width="match_parent">

    <TextView android:layout_height="wrap_content" android:layout_width="347dp" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.508" app:layout_constraintEnd_toEndOf="parent" android:textStyle="bold|italic" android:textAlignment="center" android:text="In Florida, a child is considered born alive if they have a beating heart, breathe, or voluntarily move any muscle after being birthed (removed from the womb). " android:fontFamily="sans-serif-condensed-light" android:layout_marginTop="16dp" android:id="@+id/disclaimer"/>

    <TextView android:layout_height="wrap_content" android:layout_width="347dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.482" app:layout_constraintEnd_toEndOf="parent" android:textStyle="normal" android:textSize="16sp" android:textAlignment="textStart" android:text="\tAnyone over the age of 18 is eligible to receive an abortion, however minors must recieve parental consent OR have permission from a court (see “Minor eligibility” below)." android:fontFamily="sans-serif-condensed-light" android:layout_marginTop="12dp" android:id="@+id/paragraph" app:layout_constraintTop_toBottomOf="@+id/disclaimer"/>

    <TextView android:layout_height="wrap_content" android:layout_width="347dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.517" app:layout_constraintEnd_toEndOf="parent" android:textStyle="bold" android:textSize="20sp" android:text="Eligibility" android:layout_marginTop="24dp" android:id="@+id/header" app:layout_constraintTop_toBottomOf="@+id/paragraph"/>

    <TextView android:layout_height="wrap_content" android:layout_width="347dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:textStyle="normal" android:textSize="16sp" android:textAlignment="textStart" android:text="\tAn abortion cannot be performed after 24 weeks from the fetus being conceived. Unless, two licensed physicians certify in writing that the mother’s life is at risk or her body will suffer irreversible damage if the abortion is not performed. \n\n\tAn abortion can only be performed with the written consent of the mother. Before the mother can give her written consent, the physician performing the abortion must notify her of the risks of having and not having the abortion at least 24 hours in advance of the operation. The physician must also inform the mother of the approximate age of the fetus before abortion." android:fontFamily="sans-serif-condensed-light" android:layout_marginTop="12dp" android:id="@+id/paragraph2" app:layout_constraintTop_toBottomOf="@+id/header"/>

    <TextView android:layout_height="wrap_content" android:layout_width="347dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.482" app:layout_constraintEnd_toEndOf="parent" android:textStyle="bold" android:textSize="20sp" android:text="Minor Eligibility" android:layout_marginTop="12dp" android:id="@+id/header2" app:layout_constraintTop_toBottomOf="@+id/paragraph2"/>

    <TextView android:layout_height="wrap_content" android:layout_width="347dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.482" app:layout_constraintEnd_toEndOf="parent" android:textStyle="normal" android:textSize="16sp" android:textAlignment="textStart" android:text="\tA physician cannot perform an abortion on a minor without the written consent of the minor’s legal guardian(s), unless the minor requests the right to an abortion without parental consent to her local circuit court. \n\n\tThe circuit court will only approve this request if they consider the minor to be “sufficiently mature” (by reviewing her overall intelligence, emotional stability, responsibility, and credibility), if they find the minor is a victim of sexual abuse from a parent, or if they believe it is in the best interest for the minor’s family to get an abortion. \n\n\tIf the circuit court denies the minor’s request, the minor has the right to appeal (to send her request to another, higher level court for review, where the circuit court’s denial could be ignored and the request for an abortion could be approved)." android:fontFamily="sans-serif-condensed-light" android:layout_marginTop="12dp" android:id="@+id/paragraph3" app:layout_constraintTop_toBottomOf="@+id/header2"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0" android:text="Read More" android:layout_marginTop="20dp" android:id="@+id/abortionlink" app:layout_constraintTop_toBottomOf="@+id/paragraph3" app:layout_constraintEnd_toStartOf="@+id/abortionlink2" app:backgroundTint="#4D7CF1" android:onClick="gotoWeb" android:clickable="true" android:layout_marginEnd="20dp" android:layout_marginStart="80dp"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintEnd_toEndOf="parent" android:text="Get Help" android:layout_marginTop="20dp" android:id="@+id/abortionlink2" app:layout_constraintTop_toBottomOf="@+id/paragraph3" app:backgroundTint="#4D7CF1" android:onClick="gotoWeb" android:clickable="true" android:layout_marginEnd="80dp" app:icon="@android:drawable/stat_sys_phone_call"/>

    <TextView android:layout_height="wrap_content" android:layout_width="347dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:textStyle="bold|italic" android:textSize="11sp" android:textAlignment="center" android:text="The Read More button above will redirect you to the Planned Parenthood's Abortion Services for Minors webpage. The Get Help button will call the National Abortion Federation hotline (open 8AM-7PM EST on weekdays and 8AM-4PM EST on weekends), which is availalble for anyone (including non-minors) to call." android:fontFamily="sans-serif-condensed-light" android:layout_marginTop="75dp" android:id="@+id/disclaimer2" app:layout_constraintTop_toBottomOf="@+id/paragraph3"/>

    <TextView android:layout_height="wrap_content" android:layout_width="347dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.482" app:layout_constraintEnd_toEndOf="parent" android:textStyle="bold" android:textSize="20sp" android:text="Healthcare Workers’ Responsibilities" android:layout_marginTop="20dp" android:id="@+id/header3" app:layout_constraintTop_toBottomOf="@+id/disclaimer2"/>

    <TextView android:layout_height="wrap_content" android:layout_width="347dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.482" app:layout_constraintEnd_toEndOf="parent" android:textStyle="normal" android:textSize="16sp" android:textAlignment="textStart" android:text="\tAny medical professional has the right to refuse participating in an abortion due to religious or moral beliefs. Even if they are assigned/authorized to perform an abortion, there can be no punishment if they ultimately refuse. \n\n\tA physician may perform an abortion without any consent or a second opinion if there is an immediate medical emergency that would result in the death of the mother without an abortion. \n\n\tA voluntary “Partial-birth abortion” is illegal in Florida. A Partial-birth abortion is when the fetus being terminated is partially delivered alive from the vagina, before being fully destroyed. \n\n\tIf the fetus is considered alive (see above) during or after an attempted abortion, the participating health care workers must attempt to successfully deliver and preserve the life of the fetus." android:fontFamily="sans-serif-condensed-light" android:layout_marginTop="12dp" android:id="@+id/paragraph4" app:layout_constraintTop_toBottomOf="@+id/header3"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:text="Read Chapter" android:layout_marginTop="8dp" android:id="@+id/abortionlink3" app:layout_constraintTop_toBottomOf="@+id/paragraph4" app:backgroundTint="#4D7CF1" android:onClick="gotoWeb" android:clickable="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

